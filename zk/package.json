{
  "name": "zk-circuits",
  "version": "1.0.0",
  "description": "ZK circuits and Merkle tree scripts",
  "scripts": {
    "compile": "circom circuits/merkle_membership.circom --r1cs --wasm --sym",
    "setup": "node scripts/setup.js",
    "generate-merkle": "node scripts/generateMerkleTree.js",
    "test-proof": "node scripts/testProof.js",
    "copy-circuits": "node scripts/copyCircuits.js",
    "build": "npm run compile && npm run setup && npm run copy-circuits"
  },
  "dependencies": {
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "merkletreejs": "^0.3.11",
    "snarkjs": "^0.7.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  }
}
